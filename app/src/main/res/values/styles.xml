<resources>

    <style name="Theme.Velociraptor" parent="Base.Theme.Velociraptor">
    </style>

    <style name="Base.Theme.Velociraptor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="md_corner_radius">8dp</item>
        <item name="md_color_button_text">@color/colorAccent</item>
        <item name="md_ripple_color">#5CFF4081</item>

        <item name="materialButtonStyle">@style/Widget.Button.Colored</item>
    </style>

    <style name="Widget.Button.Colored" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/btn_bg_color_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Button.Colored.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/btn_bg_color_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/btn_text_ripple_color</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/btn_text_ripple_color</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">2dp</item>
    </style>

</resources>
